{
    "family": "tancho-task",
    "networkMode": "awsvpc",
    "volumes": [
        {
            "name": "mongo-data"
        }
    ],
    "containerDefinitions": [
        {
            "name": "tancho",
            "image": "python:3.8",
            "portMappings": [
                {
                    "containerPort": 80,
                    "hostPort": 80,
                    "protocol": "tcp"
                }
            ],
            "essential": true,
            "entryPoint": [
                "sh",
                "-c"
            ],
            "command": [
                "/bin/sh -c \"cd /tancho && uvicorn main:app --host 0.0.0.0 --port 80\""
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/tancho-task",
                    "awslogs-region": "us-west-2",
                    "awslogs-stream-prefix": "tancho-"
                }
            }
        },
        {
            "name": "mongo",
            "image": "mongo",
            "mountPoints": [
              {
                "sourceVolume": "mongo-data",
                "containerPath": "/data/db"
              }
            ],
            "essential": true
        }
    ],
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "cpu": "256",
    "memory": "512",
    "executionRoleArn": "arn:aws:iam::834406655301:role/ecsTaskExecutionRole"
}
